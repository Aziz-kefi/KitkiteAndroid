<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".LoginActivity">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@drawable/oceanwaves"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="43dp" />

    <EditText
        style="@style/AppTheme.EditTextStyle"
        android:id="@+id/emailog"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_bar"
        android:gravity="center"
        android:hint="Enter Email"
        android:minHeight="48dp"
        android:padding="10dp"
        app:cornerRadius="20dp"

        app:layout_constraintBottom_toTopOf="@+id/passwordlog"
        app:layout_constraintEnd_toStartOf="@+id/gifImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gifImageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginTop="50dp"
        app:layout_constraintVertical_bias="0.5"></EditText>

    <EditText
        android:id="@+id/passwordlog"
        style="@style/AppTheme.EditTextStyle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_bar"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:minHeight="48dp"

        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/logbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailog"
        app:layout_constraintVertical_bias="0.5">

    </EditText>

    <CheckBox
        android:background="@drawable/button"
        android:textSize="22dp"
        android:id="@+id/cbRememberMe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Remember Me"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/logbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordlog" />
    <Button
        android:id="@+id/logbutton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:background="@drawable/button"
        android:text="Login"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/gifImageView"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toEndOf="@+id/gifImageView"
        app:layout_constraintTop_toBottomOf="@+id/passwordlog" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:text="No Account?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/gifImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gifImageView"
        app:layout_constraintTop_toBottomOf="@+id/logbutton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="register"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gifImageView"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toEndOf="@+id/gifImageView"
        app:layout_constraintTop_toBottomOf="@+id/logbutton"
        app:layout_constraintVertical_bias="0.773" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="265dp"
        android:layout_height="150dp"

        app:layout_constraintBottom_toTopOf="@+id/gifImageView"
        app:layout_constraintEnd_toStartOf="@+id/gifImageView"
        app:layout_constraintStart_toEndOf="@+id/gifImageView"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView"
        app:layout_constraintVertical_bias="0.811"
        app:srcCompat="@drawable/logokit" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02872777" />


</androidx.constraintlayout.widget.ConstraintLayout>